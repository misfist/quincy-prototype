{
	"name": "quincy/quincy-prototype",
	"description": "Custom block theme for Quincy prototype",
	"type": "wordpress-theme",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Pea",
			"email": "pea@pealutz.me"
		}
	],
	"config": {
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require": {
		"composer/installers": "^1.11.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"phpcompatibility/phpcompatibility-wp": "^2.1.1",
		"wp-cli/wp-cli-bundle": "^2.5.0",
		"wp-coding-standards/wpcs": "^2.3.0"
	},
	"scripts": {
		"format": "./vendor/bin/phpcbf --report=summary,source",
		"lint": "./vendor/bin/phpcs --report=summary,source",
		"pot": "./vendor/bin/wp i18n make-pot . build/languages/quincy.pot --exclude=node_modules,vendor,build --allow-root"
	}
}
